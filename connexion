  <script src="js/main.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const btnLogin = document.getElementById('loginBtn'); // ton bouton de connexion

  if (btnLogin) {
    btnLogin.addEventListener('click', (e) => {
      e.preventDefault();

      // Simule une connexion réussie (tu remplaceras ça plus tard par un vrai contrôle)
      const firstLogin = !localStorage.getItem('pulse_first_login_done');

      // Enregistre que l'utilisateur s'est connecté au moins une fois
      localStorage.setItem('pulse_first_login_done', 'true');

      // Redirection selon le parcours
      if (firstLogin) {
        // Étape 1 → Test de l’Ennéagramme
        window.location.href = "enneagramme.html";
      } else {
        // Si déjà connecté une fois → vers l'accueil ou profil
        window.location.href = "index.html";
      }
    });
  }

  // Active les boutons de navigation du menu
  document.querySelectorAll('[data-target]').forEach(b => {
    b.addEventListener('click', () => {
      window.location.href = b.dataset.target;
    });
  });
});
</script>

</body>
